<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView 
        android:id="@+id/tv_ip"
        android:text="@string/ip"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText 
        android:id="@+id/et_ip"
        android:inputType="text"
        android:textSize="30sp"
        android:text="@string/ipaddr"
        android:layout_toRightOf="@id/tv_ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
	<TextView 
        android:id="@+id/tv_port"
        android:text="@string/port"
        android:textSize="30sp"
        android:layout_below="@id/et_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText 
        android:id="@+id/et_port"
        android:inputType="text"
        android:textSize="30sp"
        android:text="@string/portVal"
        android:layout_toRightOf="@id/tv_port"
        android:layout_below="@id/et_ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
	<Button 
	    android:id="@+id/btn_linkdevice"
        android:text="@string/btn_linkdevice"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
