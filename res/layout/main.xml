<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@android:color/background_light"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- 标题栏 -->
	<LinearLayout 
		android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
		<LinearLayout 
			android:orientation="horizontal"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
            <TextView
                android:text="@string/app_name"
                android:textSize="40sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View 
            android:background="@android:color/darker_gray"
            android:layout_width="fill_parent"
            android:layout_height="2dp"/>
    </LinearLayout>

	<!-- 主菜单栏 -->
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_margin="10dp"
	    android:layout_weight="3"
	    android:layout_width="match_parent"
	    android:layout_height="0dp">
        
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp">
			<ImageView 
		        android:id="@+id/iv_main_light"
		        android:contentDescription="@string/contentDescription"
		        android:src="@drawable/main_light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
	    	<ImageView 
				android:id="@+id/iv_main_socket"
				android:contentDescription="@string/contentDescription"
		        android:src="@drawable/main_socket"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp">
			<ImageView 
		        android:id="@+id/iv_main_environment"
		        android:contentDescription="@string/contentDescription"
		        android:src="@drawable/main_environment"
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"/>
	    	<ImageView 
				android:id="@+id/iv_main_security"
		        android:contentDescription="@string/contentDescription"
		        android:src="@drawable/main_security"
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"/>
	    </LinearLayout>
	    
	    </LinearLayout>
	    <View 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	</LinearLayout>

	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_weight="1"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp">
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
			<View 
			    android:layout_alignParentTop="true"
			    android:background="@android:color/darker_gray"
		        android:layout_width="match_parent"
		        android:layout_height="2dp"/>
			<ImageView 
		    	android:id="@+id/voice"
		    	android:src="@drawable/voice"
		    	android:contentDescription="@string/app_name"
		    	android:layout_centerVertical="true"
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView 
		    	android:text="@string/voice_info"
		    	android:textSize="30sp"
		    	android:background="@drawable/voice_info"
		    	android:layout_toRightOf="@id/voice"
		    	android:layout_centerVertical="true"
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
	    </RelativeLayout>
		<View 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	</LinearLayout>
	
</LinearLayout>